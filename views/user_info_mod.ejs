<section class="card">
	<h2>用户注册</h2>
	<form action=<%- "/users/" + username + '/modify' %> method="post" class="form">
		<input type="text" name="nickname" data-match=".+?" placeholder="填写用户昵称">
		<input type="text" name="tel" data-match="^(1[3578]\d{9}|)$" placeholder="手机号,非必填">
		<input type="text" name="email" data-match="^(\w+@\w+(\.)|)$" placeholder="邮箱,非必填">
		<%- include captcha %>
		<input type="submit" value="立即注册">
	</form>
</section>
