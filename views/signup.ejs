<%- include header %>
<section class="path">
	<a href="/">网站首页</a> / 用户注册
</section>
<section class="card">
	<h2>用户注册</h2>
	<form action="/users" method="post" class="form">
		<input type="text" name="username" data-match="^\w{6,16}" placeholder="用户名: 6-16数字字母组成">
		<input type="password" name="password" data-match="^\w{6,16}" placeholder="密码: 6-16数字字母组成">
		<input type="password" name="re_password" data-match="^\w{6,16}" placeholder="重复密码:">
		<%- include captcha %>
		<input type="submit" value="立即注册">
	</form>
</section>
<section class="tool-bar">
	<span>其他</span>
	<a href="/signin">登录</a>
	<a href="/forget_pass">忘记密码?</a>
</section>
<%- include footer %>